<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <TextView
        android:id="@+id/LogoTextViewLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="50dp"
        android:text="SimplePro"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/mapo"
        />



    <EditText
        android:textColor="@android:color/black"
        android:id="@+id/emailEditTextLogin"
        app:layout_constraintTop_toBottomOf="@id/LogoTextViewLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email"
        android:textStyle="bold"
        android:fontFamily="@font/mapo"
        android:layout_marginHorizontal="30dp"
        android:textSize="20dp"
        android:layout_marginTop="100dp"
        />

    <EditText
        android:textColor="@android:color/black"
        android:id="@+id/passwordEditTextLogin"
        app:layout_constraintTop_toBottomOf="@id/emailEditTextLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:textStyle="bold"
        android:fontFamily="@font/mapo"
        android:layout_marginHorizontal="30dp"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:elevation="10dp"
        android:id="@+id/loginButton"
        app:layout_constraintTop_toBottomOf="@id/passwordEditTextLogin"
        app:layout_constraintRight_toRightOf="@id/passwordEditTextLogin"
        app:layout_constraintLeft_toLeftOf="@id/passwordEditTextLogin"
        android:background="@drawable/login_button_background"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Login"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/mapo"
        android:textSize="30dp"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:id="@+id/GoSighUpActivityTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아직 계정이 갖고 있지 않나요?"
        android:fontFamily="@font/mapo"
        android:textColor="#444F8C"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>